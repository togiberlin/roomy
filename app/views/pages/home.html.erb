<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: 'Where do you need a crib?', class: 'form-control' %>
    </div>
    <div class="col-md-2">
      <%= text_field_tag :start_date, params[:search], placeholder: 'Start date', class: 'form-control' %>
    </div>
    <div class="col-md-2">
      <%= text_field_tag :end_date, params[:search], placeholder: 'End date', class: 'form-control' %>
    </div>
    <div class="col-md-2">
      <%= submit_tag 'Search', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<div class="row">
  <% @rooms.each do |room| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading preview">
          <%= image_tag room.photos[0].image.url(:medium) if room.photos.length > 0 %>
        </div>
        <div class="panel-body">
          <%= link_to room.listing_name, room %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(function() {
    // Datepicker for start date
    $('#start_date').datepicker({
      dateFormat: 'dd-mm-yy',
      minDate: 0,
      maxDate: '3m',
      onSelect: function(selected) {
        $('#end_date').datepicker('option', 'minDate', selected);
        $('#end_date').attr('disabled', false);
      }
    });

    // Datepicker for end date
    $('#end_date').datepicker({
      dateFormat: 'dd-mm-yy',
      minDate: 0,
      maxDate: '3m',
      onSelect: function(selected) {
        $('#start_date').datepicker('option', 'maxDate', selected);
      }
    });
  });
</script>
