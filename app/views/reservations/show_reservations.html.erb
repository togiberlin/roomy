<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to 'Your Listings', rooms_path, class: 'sidebar-link' %></li>
      <li class="sidebar-item"><%= link_to 'Your Reservations', show_reservations_path, class: 'sidebar-link active' %></li>
      <li class="sidebar-item"><%= link_to 'Your Trips', show_trips_path, class: 'sidebar-link' %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">Your Reservations</div>
      <div class="panel-body">
        <% @rooms.each do |room| %>
          <% room.reservations.each do |reservation| %>
            <div class="row">
              <div class="col-md-2">
                <%= reservation.start_date.strftime('%v') %>
              </div>
              <div class="col-md-6">
                <%= link_to rooms_path(reservation.room) do %>
                  <%= image_tag reservation.room.photos[0].image.url(:thumb) %>
                <% end %>
              </div>
              <div class="col-md-2">
                <%= link_to user_path(reservation.user) do %>
                  <%= image_tag avatar_url(reservation.user), class: 'img-circle avatar-medium' %>
                <% end %>
              </div>
              <div class="col-md-2 right">
                <h4><%= reservation.total %> EUR</h4>
              </div>
            </div>
            <hr>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
